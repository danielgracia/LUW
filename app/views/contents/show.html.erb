<%= render "shared/header" %>

<div class="container" style = "margin-top: 60px;" ng-app="sharedApp" ng-controller="SharedController" ng-view>
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-9">
			<p class="pull-right visible-xs">
				<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
			</p>
			<div id="topicContent">
				<h1><%= @content.title %></h1>
				<hr class="prettyline">
				<div id="tags">
					<p>Tags:
						<% @content.tags.each do |t|  %>
						<span class="label label-info"> <%= t.body %></span>
						<% end %>
						<span class="label label-success pull-right"> Rating: <span class="badge" id="score"><%= @content.score %></span> </span>
					</p>
					
				</div>
				<hr class="prettyline">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<img src="<%= image_path "user_icon.jpg" %>" class="img-thumbnail pull-left" alt="Perfil Photo" width="100px" height="100px">
						<h3 class="panel-title">Por <%= @content.user.name %></h3>
						<button type="button" class="btn btn-sm btn-danger pull-right" onclick="vote('downvote', <%= @content.id %>);"><spam class="glyphicon glyphicon-thumbs-down"> DownVote </spam></button>
						<button type="button" class="btn btn-sm btn-success pull-right" onclick="vote('upvote', <%= @content.id %>);"><spam class="glyphicon glyphicon-thumbs-up"> UpVote </spam></button></button> 
					</div>
					<div class="panel-body">
						<%= raw @content.body %>
					</div>
					<div class="panel-footer auto-overflow">
						<% if @current_user.name == @content.user.name %>
						<button type="button" class="btn btn-sm btn-primary"><spam class="glyphicon glyphicon-pencil"> Editar </spam></button>
						<button type="button" class="btn btn-sm btn-danger"><spam class="glyphicon glyphicon-remove"> Deletar </spam></button>
						<% end %>
						<spam class="date-label float-right"> 
							Em: <%= @content.created_at.strftime("%d/%m/%Y, %R") %>
						</spam>
					</div>
				</div>
				
				<% @content.comments.each do |t| %>
				<hr class="prettyline">
				<div class="panel panel-default">
					<div class="panel-heading comment-heading">
						<img src="<%= image_path "user_icon.jpg" %>" class="img-thumbnail pull-left comment-img" alt="Perfil Photo" width="70px" height="70px">
						<h3 class="panel-title">Por <%= t.user.name %></h3>
						<span class="label label-deffault pull-right"><span class="badge"><%= @comment.score %></span> </span>
						<button type="button" class="btn btn-sm btn-danger pull-right"><spam class="glyphicon glyphicon-thumbs-down"> DownVote </spam></button>
						<button type="button" class="btn btn-sm btn-success pull-right"><spam class="glyphicon glyphicon-thumbs-up"> UpVote </spam></button></button>
					</div>
					<div class="panel-body">
						<%= raw t.body %>
					</div>
					<div class="panel-footer auto-overflow">
						<spam class="float-right date-label"> Em: <%= t.created_at.strftime("%d/%m/%Y, %R") %> </spam>
						<% if @current_user.name == t.user.name %>
						<button type="button" class="btn btn-sm btn-danger"><spam class="glyphicon glyphicon-remove"> Deletar </spam></button>
						<% end %>
					</div>
				</div>
				<% end %>
				
			</div>
			<div class="jumbotron auto-overflow jumbotron-padding">
				<div id="wrapper" style="width: 700px">
					
					<form  enctype="multipart/form-data" method="post" action="/postagem/<%= @content.id %>/comentario/criar" autocomplete="on" class="form-horizontal">
						<h2>Comentar</h2>
						<!-- Text input-->
						<p> 
							<div tabindex="-1">
								<textarea class="tinymce" tabindex="-1" name="comment[body]" style="width:100%; height: 200px"  spellcheck="true"></textarea>
								<%= tinymce %>
							</div>
						</p>
						<div class="control-group">
							<label class="control-label" for="create"></label>
							<div class="controls">
								<button id="createBtn" name="create" class="btn btn-primary btn-lg pull-right" type="submit">Comentar</button>
							</div>
						</div>

						
					</form>
					
				</div>
				
			</div>
		</div>
		
		
		
		
		<!-- LOAD TEMPLATE OF TRENDS TOPICS -->
		<%= render "shared/trends" %>
	</div><!--/row-->

	<hr>

	<!-- LOAD TEMPLATE OF TRENDS TOPICS -->
	<%= render "shared/footer" %>

</div><!--/.container-->



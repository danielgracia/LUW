<%= render "shared/header" %>

   <div class="container" style = "margin-top: 50px;" ng-app="sharedApp" ng-controller="SharedController" ng-view>
      <div class="row row-offcanvas row-offcanvas-right">
         <div class="col-xs-12 col-sm-9">
          <p class="pull-right visible-xs">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          </p>
          <div class="jumbotron">
            <div id="wrapper" style="width: 700px">
                       
                            
                                <form  enctype="multipart/form-data" method="post" action="/postagem/criar" autocomplete="on" class="form-horizontal">
                                    <h1>Novo Tópico</h1>
                             <!-- Text input-->
                            <div class="control-group">
                              <label class="control-label" for="title">Título:</label>
                              <div class="controls">
                                <input required="" id="title" name="title" type="text" class="form-control" placeholder="Ex. Algoritmo MergeSort" class="input-medium" required="">
                              </div>
                            </div>
                             <div class="control-group">
                              <label class="control-label" for="tags">Tags:</label>
                              <div class="controls">
                                <input required="" data-role="tagsinput" id="tags" name="tags" type="text" class="form-control input-medium" value="BCC,Algoritmo" >
                              </div>
                            </div>
                                <p> 
                                 <label fclass="uname"> Texto:</label>
                                <div tabindex="-1">
                                <textarea class="tinymce" tabindex="-1" name="content" style="width:100%; height: 400px"  spellcheck="true"></textarea>
								<%= tinymce %>
                                </div>
                                </p>
                                <p>
                                <label for="arquivo" fclass="uname"> Arquivo:</label>
                                <input id="arquivo" name="filearg"  type="file" placeholder="Faça Upload..." />
                                </p>
                                <div class="control-group">
                                  <label class="control-label" for="create"></label>
                                  <div class="controls">
                                    <button type="submit" id="createBtn" name="create" class="btn btn-primary btn-lg pull-right">Criar</button>
                                  </div>
                                </div>

                                
                            </form>
                                  
                        </div>
     
          </div>
        </div>
      

      </div><!--/row-->

      <hr>

      <!-- LOAD TEMPLATE OF TRENDS TOPICS -->
       <%= render "shared/footer" %>

    </div><!--/.container-->

<%= render "shared/header" %>

<div class="container" style = "margin-top: 50px;" ng-app="sharedApp" ng-controller="SharedController" ng-view>
  <div class="row row-offcanvas row-offcanvas-right">
   <div class="col-xs-12 col-sm-9">
    <p class="pull-right visible-xs">
      <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
    </p>
    <div class="jumbotron auto-overflow">
      <div id="wrapper" style="width: 700px">


        <form  enctype="multipart/form-data" method="post" action="/postagem/criar" autocomplete="on" class="form-horizontal">
          <h1>Novo Tópico</h1>
          <!-- Text input-->
          <div class="control-group">
            <label class="control-label" for="content[title]">Título:</label>
            <div class="controls">
              <input required="" id="content[title]" name="content[title]" type="text" class="form-control" placeholder="Ex. Algoritmo MergeSort" class="input-medium" required="">
            </div>
          </div>
          <div class="control-group auto-overflow">
            <label class="control-label" for="content[raw_tags]" title="Evite criar tags duplicadas, utilize de preferência as listadas no auto-complemento">Tags:</label>
            <a class="btn btn-sm btn-defult pull-right margin5" data-toggle="modal" data-target=".bs-modal-lg"> Sobre Tags <span class="glyphicon glyphicon-question-sign pull-right margin5" style="margin-top: 5px" ></span></a>
            <div class="controls">
              <input id="tags" name="content[raw_tags]" class="form-control input-medium typeahead" data-provide="typeahead">
            </div>
          </div>
          <p> 
           <label fclass="uname" for="content[body]">Conteúdo:</label>
           <div tabindex="-1">
            <textarea class="tinymce" tabindex="-1" id-"content[body]" name="content[body]" style="width:100%; height: 400px"  spellcheck="true"></textarea>
            <%= tinymce %>
          </div>
        </p>
          <div class="invisible">
            <p>
              <label for="content[file]" fclass="uname"> Arquivo:</label>
              <input id="content[file]" name="content[file]"  type="file" placeholder="Faça Upload..." />
            </p>
          </div>
          <div class="control-group">
            <label class="control-label" for="create"></label>
            <div class="controls">
              <button type="submit" id="createBtn" name="create" class="btn btn-primary btn-lg pull-right">Criar</button>
            </div>
          </div>
        </form>




        <div class="modal fade bs-modal-lg" id="tagModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <br>
                            <div class="bs-example bs-example-tabs">
                              <ul id="myTab" class="nav nav-tabs">
                                <li class="active"><a href="#aboutTags" data-toggle="tab">Sobre TAGS</a></li>
                              </ul>
                            </div>
                            <div class="modal-body">
                              <div id="myTabContent" class="tab-content">

                                <div class="tab-pane fade active in" id="about-tags">
                                    
                                      Boas práticas na utilização de tags:
                                      <ul>
                                        <li> Preferencialmente utilize das tags recomendadas no auto-complete, </li>
                                        <li> Evite criar tags sinônimas,</li>
                                        <li> Categorize seu tópico utilizando tags (Ex: Tutorial, Dúvida, Aviso, Evento, etc...).</li>
                                      </ul>

                                </div>
                              </div>
                            </div>
                            <div class="modal-footer">
                              <center>
                                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="clearResult();">Voltar</button>
                              </center>
                            </div>
            </div>
          </div>
        </div>

    </div>

  </div>
</div>


</div><!--/row-->

<hr>

<!-- LOAD TEMPLATE OF TRENDS TOPICS -->
<%= render "shared/footer" %>

</div><!--/.container-->

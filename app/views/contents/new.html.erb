<%= render "shared/header" %>

   <div class="container" style = "margin-top: 50px;" ng-app="sharedApp" ng-controller="SharedController" ng-view>
      <div class="row row-offcanvas row-offcanvas-right">
         <div class="col-xs-12 col-sm-9">
          <p class="pull-right visible-xs">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          </p>
          <div class="jumbotron auto-overflow">
            <div id="wrapper" style="width: 700px">
                       
                            
                                <form  enctype="multipart/form-data" method="post" action="/postagem/criar" autocomplete="on" class="form-horizontal">
                                    <h1>Novo Tópico</h1>
                             <!-- Text input-->
                            <div class="control-group">
                              <label class="control-label" for="content[title]">Título:</label>
                              <div class="controls">
                                <input required="" id="content[title]" name="content[title]" type="text" class="form-control" placeholder="Ex. Algoritmo MergeSort" class="input-medium" required="">
                              </div>
                            </div>
                             <div class="control-group auto-overflow">
                              <label class="control-label" for="content[raw_tags]" title="Evite criar tags duplicadas, utilize de preferência as listadas no auto-complemento">Tags:</label><span class="glyphicon glyphicon-question-sign pull-right margin5" title="Evite criar tags duplicadas, utilize de preferência as listadas no auto-complemento" style="margin-top: 5px"></span>
                              <div class="controls">
                                <input id="tags" name="content[raw_tags]" class="form-control input-medium typeahead" data-provide="typeahead">
                                <script>
                                  $("#tags").tagsinput({
                                    elemControlSize: true,
                                    typeahead :
                                    {
                                      items: 4,
                                      source: ["Alabama","Alaska","Arizona","Arkansas","California","Colorado","Connecticut","Delaware","Florida","Georgia","Hawaii","Idaho","Illinois","Indiana","Iowa","Kansas","Kentucky","Louisiana","Maine","Maryland","Massachusetts","Michigan","Minnesota","Mississippi","Missouri","Montana","Nebraska","Nevada","New Hampshire","New Jersey","New Mexico","New York","North Dakota","North Carolina","Ohio","Oklahoma","Oregon","Pennsylvania","Rhode Island","South Carolina","South Dakota","Tennessee","Texas","Utah","Vermont","Virginia","Washington","West Virginia","Wisconsin","Wyoming"]
                                    }
                                  });
                                </script>

                              </div>
                            </div>
                                <p> 
                                 <label fclass="uname" for="content[body]">Conteúdo:</label>
                                <div tabindex="-1">
                                <textarea class="tinymce" tabindex="-1" id-"content[body]" name="content[body]" style="width:100%; height: 400px"  spellcheck="true"></textarea>
								<%= tinymce %>
                                </div>
                                </p>
                                <p>
                                <label for="content[file]" fclass="uname"> Arquivo:</label>
                                <input id="content[file]" name="content[file]"  type="file" placeholder="Faça Upload..." />
                                </p>
                                <div class="control-group">
                                  <label class="control-label" for="create"></label>
                                  <div class="controls">
                                    <button type="submit" id="createBtn" name="create" class="btn btn-primary btn-lg pull-right">Criar</button>
                                  </div>
                                </div>

                                
                            </form>
                                  
                        </div>
     
          </div>
        </div>
      

      </div><!--/row-->

      <hr>

      <!-- LOAD TEMPLATE OF TRENDS TOPICS -->
       <%= render "shared/footer" %>

    </div><!--/.container-->
